{
  "name": "bluetooth-terminal",
  "version": "1.5.0",
  "description": "ES6 class for serial communication with Bluetooth Low Energy (Smart) devices",
  "main": "src/BluetoothTerminal.js",
  "engines": {
    "node": "22",
    "npm": "10"
  },
  "scripts": {
    "build": "npm run clean:build && babel src/BluetoothTerminal.ts --extensions .ts --out-dir lib",
    "ci": "npm run lint && npm run tsc && npm run test:coverage && npm run build",
    "clean:build": "rm -rf lib",
    "clean:coverage": "rm -rf coverage",
    "coveralls": "npm run test:coverage -- --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && npm run clean:coverage",
    "lint": "eslint",
    "test": "mocha",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loginov-rocks/bluetooth-terminal.git"
  },
  "keywords": [
    "ble",
    "bluetooth",
    "bluetooth-low-energy",
    "bluetooth-smart",
    "communication",
    "iot",
    "physical-web",
    "serial",
    "smart"
  ],
  "author": "Danila Loginov <danila@loginov.rocks> (https://loginov.rocks)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loginov-rocks/bluetooth-terminal/issues"
  },
  "homepage": "https://github.com/loginov-rocks/bluetooth-terminal",
  "devDependencies": {
    "@babel/cli": "^7.27.0",
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.23.0",
    "@types/chai": "^5.2.1",
    "@types/chai-as-promised": "^8.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.14",
    "@types/sinon": "^17.0.4",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "istanbul": "^0.4.5",
    "jsdom": "^26.0.0",
    "mocha": "^11.1.0",
    "sinon": "^20.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "web-bluetooth-mock": "^1.2.0"
  }
}
